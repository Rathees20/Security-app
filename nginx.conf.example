# Nginx Configuration for AWS Deployment
# This file shows how to configure nginx as a reverse proxy for API requests
#
# Copy this configuration to your nginx server configuration
# Usually located at: /etc/nginx/sites-available/your-site or /etc/nginx/nginx.conf
#
# After updating, test with: sudo nginx -t
# Then reload: sudo nginx -s reload

server {
    listen 80;
    server_name 13.204.181.209;  # Replace with your domain or IP
    
    # Root directory for your built React app
    root /var/www/security-app/dist;  # Update this path to your actual deployment path
    index index.html;

    # Serve static files from the React app
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Reverse proxy for API requests - forwards /api/* to backend
    location /api/ {
        # Remove /api prefix and forward to backend
        rewrite ^/api/(.*)$ /$1 break;
        
        # Backend URL
        proxy_pass https://securityapp-backend.vercel.app/api/;
        
        # Important headers for API requests
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host securityapp-backend.vercel.app;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # CORS headers (if backend doesn't send them)
        # Uncomment if you still get CORS errors:
        # add_header 'Access-Control-Allow-Origin' '*' always;
        # add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS' always;
        # add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type' always;
        
        # Handle preflight requests
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' '*' always;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS' always;
            add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type' always;
            add_header 'Access-Control-Max-Age' 1728000;
            add_header 'Content-Type' 'text/plain; charset=utf-8';
            add_header 'Content-Length' 0;
            return 204;
        }
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/json;
}

